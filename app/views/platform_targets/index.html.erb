<h1>Listing platform_targets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Uri</th>
      <th>Features</th>
      <th>Target</th>
      <th>Platform target type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platform_targets.each do |platform_target| %>
      <tr>
        <td><%= platform_target.name %></td>
        <td><%= platform_target.uri %></td>
        <td><%= platform_target.features %></td>
        <td><%= platform_target.target %></td>
        <td><%= platform_target.platform_target_type %></td>
        <td><%= link_to 'Show', platform_target %></td>
        <td><%= link_to 'Edit', edit_platform_target_path(platform_target) %></td>
        <td><%= link_to 'Destroy', platform_target, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Platform target', new_platform_target_path %>
