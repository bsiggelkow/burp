<h1>Listing platform_creatives</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Uri</th>
      <th>Features</th>
      <th>Creative</th>
      <th>Platform creative type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platform_creatives.each do |platform_creative| %>
      <tr>
        <td><%= platform_creative.name %></td>
        <td><%= platform_creative.uri %></td>
        <td><%= platform_creative.features %></td>
        <td><%= platform_creative.creative %></td>
        <td><%= platform_creative.platform_creative_type %></td>
        <td><%= link_to 'Show', platform_creative %></td>
        <td><%= link_to 'Edit', edit_platform_creative_path(platform_creative) %></td>
        <td><%= link_to 'Destroy', platform_creative, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Platform creative', new_platform_creative_path %>
