<h1>Listing platform_account_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Platform</th>
      <th>Endpoint</th>
      <th>Schema</th>
      <th>Field mapping</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platform_account_types.each do |platform_account_type| %>
      <tr>
        <td><%= platform_account_type.name %></td>
        <td><%= platform_account_type.platform %></td>
        <td><%= platform_account_type.endpoint %></td>
        <td><%= platform_account_type.schema %></td>
        <td><%= platform_account_type.field_mapping %></td>
        <td><%= link_to 'Show', platform_account_type %></td>
        <td><%= link_to 'Edit', edit_platform_account_type_path(platform_account_type) %></td>
        <td><%= link_to 'Destroy', platform_account_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

