<h1>Listing platform_creative_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Platform</th>
      <th>Endpoint</th>
      <th>Schema</th>
      <th>Field mapping</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platform_creative_types.each do |platform_creative_type| %>
      <tr>
        <td><%= platform_creative_type.name %></td>
        <td><%= platform_creative_type.platform %></td>
        <td><%= platform_creative_type.endpoint %></td>
        <td><%= platform_creative_type.schema %></td>
        <td><%= platform_creative_type.field_mapping %></td>
        <td><%= link_to 'Show', platform_creative_type %></td>
        <td><%= link_to 'Edit', edit_platform_creative_type_path(platform_creative_type) %></td>
        <td><%= link_to 'Destroy', platform_creative_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

