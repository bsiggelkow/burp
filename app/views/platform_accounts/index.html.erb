<h1>Listing platform_accounts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Uri</th>
      <th>Features</th>
      <th>Account</th>
      <th>Platform account type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platform_accounts.each do |platform_account| %>
      <tr>
        <td><%= platform_account.name %></td>
        <td><%= platform_account.uri %></td>
        <td><%= platform_account.features %></td>
        <td><%= platform_account.account %></td>
        <td><%= platform_account.platform_account_type %></td>
        <td><%= link_to 'Show', platform_account %></td>
        <td><%= link_to 'Edit', edit_platform_account_path(platform_account) %></td>
        <td><%= link_to 'Destroy', platform_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Platform account', new_platform_account_path %>
