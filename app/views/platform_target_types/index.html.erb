<h1>Listing platform_target_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Platform</th>
      <th>Endpoint</th>
      <th>Schema</th>
      <th>Field mapping</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platform_target_types.each do |platform_target_type| %>
      <tr>
        <td><%= platform_target_type.name %></td>
        <td><%= platform_target_type.platform %></td>
        <td><%= platform_target_type.endpoint %></td>
        <td><%= platform_target_type.schema %></td>
        <td><%= platform_target_type.field_mapping %></td>
        <td><%= link_to 'Show', platform_target_type %></td>
        <td><%= link_to 'Edit', edit_platform_target_type_path(platform_target_type) %></td>
        <td><%= link_to 'Destroy', platform_target_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

